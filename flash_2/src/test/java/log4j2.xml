<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d [%t] %C{2} %M (%F:%L) %-5p - %m%xEx%n" />
		</Console>
	</Appenders>

	<Loggers>

		<Root level="all">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>
